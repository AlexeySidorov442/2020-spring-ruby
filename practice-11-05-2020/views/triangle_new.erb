<% if @params && !@params[:error].empty? %>
  <div class="large-12 cell callout">
    <p>При заполнении формы возникли ошибки</p>
    <ul>
      <% @params[:error].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="large-12 cell">
  <form method="post">
    <div class="grid-container">
      <div class="grid-x grid-padding-x">
        <div class="large-12 cell">
          <label>Первая сторона
            <input type="text" placeholder="3" name="size_a" value="<%= @params && @params[:size_a] %>">
          </label>
        </div>
        <div class="large-12 cell">
          <label>Вторая сторона
            <input type="text" placeholder="4" name="size_b" value="<%= @params && @params[:size_b] %>">
          </label>
        </div>
        <div class="large-12 cell">
          <label>Третья сторона
            <input type="text" placeholder="5" name="size_c" value="<%= @params && @params[:size_c] %>">
          </label>
        </div>
        <div class="large-12 cell">
          <input type="submit" value="Сохранить" class="button">
        </div>
      </div>
    </div>
  </form>
</div>